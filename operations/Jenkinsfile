#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('Configure Directories') {
            steps {
                sh """pwd
                ls -lart
                zip -r drupal.zip /var/lib/jenkins/workspace/deployer -x '*.git*' -q
                """
            }
        }
        stage('Drupal Docker Image') {
            steps {
                sh """pwd
                sleep 5s
                """
            }
        }
    }
}