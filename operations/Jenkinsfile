#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('Configure Directories') {
            steps {
                sh """pwd
                ls -lart
                zip -r drupal.zip /var/lib/jenkins/workspace/deployer -x '*.git*' -q
                """
            }
        }
        stage('Copy to remote server') {
            steps {
                sh """pwd
                sshpass -p "Teradata@123" scp drupal.zip ubuntu@34.216.214.225:/tmp
                """
            }
        }
    }
}